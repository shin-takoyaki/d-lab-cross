# アプリケーションの秘密鍵（必ず変更してください）
SECRET_KEY=your_secret_key_here

# データベース接続URI
DATABASE_URI=postgresql://eventuser:eventpass@postgres:5432/eventdb

# JWT認証用の秘密鍵（必ず変更してください）
JWT_SECRET_KEY=your_jwt_secret_key_here

# Flaskアプリケーション設定
FLASK_APP=run.py

# 環境設定（development, production, testing）
FLASK_ENV=development

# デバッグモード（True/False）
DEBUG=True

# ホスト設定（0.0.0.0で全てのインターフェースでリッスン）
HOST=0.0.0.0

# ポート設定
PORT=5010

# PostgreSQL設定
POSTGRES_USER=eventuser
POSTGRES_PASSWORD=eventpass
POSTGRES_DB=eventdb
POSTGRES_HOST=postgres 