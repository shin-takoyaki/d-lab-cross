# アプリケーションの秘密鍵（必ず変更してください）
SECRET_KEY=your_secret_key_here

# データベース接続URI
DATABASE_URI=sqlite:///event_matching.db

# JWT認証用の秘密鍵（必ず変更してください）
JWT_SECRET_KEY=your_jwt_secret_key_here

# Flaskアプリケーション設定
FLASK_APP=run.py

# 環境設定（development, production, testing）
FLASK_ENV=development

# デバッグモード（True/False）
DEBUG=True

# ホスト設定（0.0.0.0で全てのインターフェースでリッスン）
HOST=0.0.0.0

# ポート設定
PORT=5010 